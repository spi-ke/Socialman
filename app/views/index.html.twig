{% extends "layout.html.twig" %}

{% block content %}
<!-- Top content of the page, logo socialman -->
<div class="first">
    <div class="row">
        <div class="col-lg-6"></div>
        <div class="col-lg-6 text-center">
            <div class="logo-sm"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <div id="logo"></div>
        </div>
    </div>
    <div class="row spacer-80">
        <div class="col-md-12 text-center">
            <h4 class="dark-blue">Zavolat Socialmana?</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center social-links">
            <a href="#"><span class="logo-fb"></span></a>
            <a href="#"><span class="logo-tw"></span></a>
            <a href="#"><span class="logo-g"></span></a>
            <a href="#"><span class="logo-in"></span></a>
